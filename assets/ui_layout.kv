#:import hex_color kivy.utils.get_color_from_hex

<GameWidget>:
    canvas.before:
        Color:
            rgb: hex_color('#FFFFFF')
        Rectangle:
            pos: self.pos
            size: self.size
    Player:
        id: player_widget
        size: (min(root.width, root.height) * 0.12,) * 2
        pos:
            root.center_x - min(root.width, root.height) * 0.06,\
            root.center_y - min(root.width, root.height) * 0.06


<Player>:
    Image:
        id: image
        size: root.size
        pos: root.pos
        source: 'assets/images/player.png'


<Platform>:
    size:
        min(app.game_widget.width, app.game_widget.height) * 0.13,\
        min(app.game_widget.width, app.game_widget.height) * 0.03
    Image:
        size: root.size
        pos: root.pos
        source: 'assets/images/platform.png'


<Cloud>:
    size:
        min(app.game_widget.width, app.game_widget.height) * 0.13,\
        min(app.game_widget.width, app.game_widget.height) * 0.05
    Image:
        size: root.size
        pos: root.pos
        source: 'assets/images/cloud.png'


<BreakablePlatform>:
    size:
        min(app.game_widget.width, app.game_widget.height) * 0.13,\
        min(app.game_widget.width, app.game_widget.height) * 0.03
    Image:
        id: image
        size: root.size
        pos: root.pos
        source: 'assets/images/platform_breakable.png'
