#:import hex_color kivy.utils.get_color_from_hex

<GameWidget>:
    canvas.before:
        Color:
            rgb: hex_color('#FFFFFF')
        Rectangle:
            pos: self.pos
            size: self.size
    Player:
        pos: root.pos
        size: root.size


<Player>:
    canvas:
        Rectangle:
            pos: root.pos
            size: root.size
            source: 'assets/images/player.png'
