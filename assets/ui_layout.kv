#:import hex_color kivy.utils.get_color_from_hex

<GameWidget>:
    player: player_widget
    canvas.before:
        Color:
            rgb: hex_color('#FFFFFF')
        Rectangle:
            pos: self.pos
            size: self.size
    Player:
        id: player_widget
        size: root.width >> 3, root.height >> 3
        pos: root.center_x - self.width // 2, root.center_y - self.height // 2


<Player>:
    canvas:
        Rectangle:
            size: (min(root.height, root.width),) * 2
            pos: root.center_x - min(root.height, root.width) // 2, root.center_y - min(root.height, root.width) // 2
            source: 'assets/images/player.png'
